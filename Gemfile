  gem 'rspec-rails'
  gem 'spork', '~> 0.9.0.rc'
  gem 'guard-spork'
  gem 'guard-rspec'
  gem 'factory_girl_rails'
  gem 'capistrano'
  gem 'rails-erd'
  gem 'capybara'
end

